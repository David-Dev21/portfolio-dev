---
import Badge from "./Badge.astro";
import ButtonLink from "./ButtonLink.astro";
import ArrowRight from "./icons/ArrowRight.astro";
import GitHub from "./icons/GitHub.astro";
interface Props {
  title: string;
  description: string;
  link?: string;
  github?: string;
  image?: string;
  tags: {
    name: string;
    icon: any;
  }[];
}
const { title, description, link, github, image, tags } = Astro.props;
---

<article class="rounded-2xl shadow-2xl bg-gray-800">
  <div class="relative">
    <div class="w-full h-48 overflow-hidden rounded-t-2xl">
      <img class="w-full h-full object-cover" src={image} alt={title} />
    </div>

    <div class="w-full flex justify-between absolute top-0 p-2">
      {
        github && (
          <ButtonLink href={github}>
            <GitHub class="size-4 lg:size-5" />
          </ButtonLink>
        )
      }
      {
        link && (
          <ButtonLink href={link}>
            <ArrowRight class="size-4 lg:size-5" />
          </ButtonLink>
        )
      }
    </div>
  </div>
  <div class="p-4">
    <h3 class="text-md lg:text-2xl font-bold mb-2 text-white">
      {title}
    </h3>
    <p class="text-sm mb-4 text-white/50">
      {description}
    </p>
    <nav class="flex flex-wrap gap-2">
      {
        tags.map((tag: { name: string; icon: any }) => (
          <Badge key={tag.name}>
            <tag.icon class="size-4 lg:size-6" />
            {tag.name}
          </Badge>
        ))
      }
    </nav>
  </div>
</article>
